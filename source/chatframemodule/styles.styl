// chatframe styles
#hidden-templates
    display none

#chatframe.here
    transform translateX(0)

#chatframe
    position fixed
    z-index 50
    top 0
    left 0
    width 100%
    height 100%
    // pointer-events: none
    box-sizing: border-box
    transform translateX(-102%)
    background-color transparent
    transition transform 0.3s

input[type=range][orient=vertical]
    -webkit-appearance: slider-vertical;
    width: 8px;
    height: 175px;
    padding: 0 5px;
    position absolute
    right 5px
    top 50%
    transform: translateY(-50%)

#close-button
    position absolute
    top 10px
    right 10px
    border-radius: 10px
    padding 5px
    svg
        height 25px
        width 25px

#close-button:hover
    background-color #dedede77

#hangup-button
    display: none
    cursor pointer
    position absolute
    bottom 10px
    // right 55px
    right 50%
    transform: translateX(50%)
    background-color #dedede77
    padding 5px 12px
    border-radius: 20px
    height: 40px
    width: 54px
    box-sizing: border-box
    svg
        pointer-events: none
        height 29px
        width 29px
        color: red
        border-radius 50%
        border solid 1px white
        background-color #bababa

#hangup-button.here
    display block

#show-webcam-button.is-shown
    background-color #aaa
    color white

#show-webcam-button
    position: absolute
    top 10px
    left 10px
    border-radius: 10px
    padding 5px
    background-color #dedede77
    transition: background-color 0.3s
    svg
        height 25px
        width 25px

#my-video-streams-block
    // display: none
    display flex
    position absolute
    top 10px
    right 55px
    transform translateY(calc(-102% - 10px))
    // width 330px
    width 165px
    height 110px
    transition transform 0.3s

#my-video-streams-block.here
    transform translateY(0)


#desktop-capture-block
    width 165px
    height 110px
    background-color transparent
    display: none

#web-cam-block
    object-fit: cover
    width 165px
    height 110px
    background-color transparent
    border-radius: 20px
    background-color #dedede77
    border solid 1px white

#incoming-video-streams-block
    object-fit: cover
    width 100%
    height 100%
    overflow hidden
    background-color white

#show-peers-button.is-shown
    background-color #aaa
    color white

#show-peers-button
    position: absolute
    bottom 10px
    right 10px
    border-radius: 10px
    padding 5px
    background-color #dedede77
    transition background-color 0.3s
    svg
        height 25px
        width 25px

#peer-display-block.here
    transform translateY(0)

#peer-display-block
    position: absolute
    bottom 55px
    right 55px
    transform translateY(calc(102% + 55px))
    transition transform 0.3s

    .peer-display-element
        margin-top 10px
        padding 2px 0 2px 5px
        width 250px
        color white
        background-color #dedede77
        border-radius: 10px
        border solid 1px white
        display flex
        justify-content: space-around
        align-items: center
        svg
            width 25px
            height 25px
        .peer-name-display
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
        .peer-call-button
            display none
            padding 5px
        .peer-video-button
            padding 5px
        
        .click-button[disabled]
            pointer-events: none
            color gray
            opacity: 0.5
            
    .peer-display-element.self
        // background-color #4849
        background-color #89CFF066

#show-textchat-button.is-shown
    background-color #aaa
    color white
#show-textchat-button
    position: absolute
    bottom 10px
    left 10px
    border-radius: 10px
    padding 5px
    background-color #dedede77
    transition background-color 0.3s
    svg
        height 25px
        width 25px

#text-chat-block.here
    transform translateY(0)
    

#text-chat-block
    // background-color: #dedede77
    position: absolute
    // bottom 10px
    // left 55px
    left 10px
    bottom 55px
    width 270px
    box-sizing: border-box
    max-height: calc(100% - 110px)
    // border-radius 20px
    // padding 15px
    // border solid 1px white
    // transform translateY(calc(102% + 10px))
    transform translateY(calc(102% + 55px))
    transition transform 0.3s
    overflow hidden

#chat-input-block
    display: block
    width 100%
    background-color #dedede33
    // border-radius: 10px
    border solid 1px #dedede
    border-top none
    border-left none
    box-sizing: border-box

    input
        padding: 10px
        box-sizing: border-box
        background-color transparent
        text-align: left
        width 100%
        border: none
        font-size: 13pt
        color white

    input:focus
        // padding: 7px
        background-color #4449
        // border-radius: 10px
        border none

#chat-history-block
    display: flex
    flex-direction: column-reverse
    width 260px
    max-height: calc(100vh - 155px)
    overflow hidden

    .chat-element
        margin-bottom 10px
        padding 10px
        font-size 12pt
        letter-spacing 0.8pt
        line-height: 120%
        border-radius: 30px 30px 30px 0
        background-color #dedede77
        width 245px
        box-sizing: border-box
    .chat-element.mine
        margin-left 15px
        margin-bottom 10px
        padding 10px
        font-size 12pt
        letter-spacing 0.8pt
        line-height: 120%
        border-radius: 30px 30px 0 30px
        background-color #dedede77
        width 245px
        box-sizing: border-box

    .chat-text
        overflow: hidden
        text-overflow: ellipsis
        text-align: left
        color cd-flash
        // color black

    .chat-time
        display none
        text-align: right
        // background-color alpha(cd-flash, 0.6)
        padding 3px
        font-size: 7pt
        color darkgrey

